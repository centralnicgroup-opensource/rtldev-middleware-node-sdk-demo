{
    "compileOnSave": true,
    "compilerOptions": {
        "lib": [
            "es5",
            "es6",
            "es7",
            "es2015",
            "es2016",
            "es2017",
            "es2018",
            "esnext"
        ],
        "experimentalDecorators": true,
        "declaration": true,
        "declarationMap": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "module": "esnext",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "./dist",
        "removeComments": true,
        "strict": true,
        "target": "es2017",
        "typeRoots": ["./node_modules/@types/", "./typings/"],
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "noEmitOnError": true,
        "stripInternal": true,
        "isolatedModules": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "coverage",
        ".nyc_output",
        "docs"
    ]
}
